{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended",
    "next"
  ],
  "env": {
    "amd": true,
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },

  "rules": {
    "semi": ["error", "always"]
  },

  "prettier/prettier": [
    "error",
    {
      "endOfLine": "auto"
    }
  ]
}
